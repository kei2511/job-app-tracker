// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String   @id @default(cuid())
  username String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  applications Application[]
  tags         Tag[]
}

model Application {
  id                String   @id @default(cuid())
  position          String
  company_name      String
  platform          String?
  job_link          String?
  contract_type     ContractType?
  work_model        WorkModel?
  location          String?
  salary_expectation String?
  status            Status   @default(APPLIED)
  cv_version        String?
  notes             String?
  date_applied      DateTime @default(now())
  last_updated      DateTime @updatedAt
  reminder_date     DateTime?
  priority          Priority @default(MEDIUM)
  is_bookmarked     Boolean  @default(false)
  is_reminder_sent  Boolean  @default(false)
  created_at        DateTime @default(now())
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  applicationNotes  ApplicationNote[]
  applicationTags   ApplicationTag[]

  @@map("applications")
}

model ApplicationNote {
  id             String   @id @default(cuid())
  content        String
  created_at     DateTime @default(now())
  applicationId  String
  application    Application @relation(fields: [applicationId], references: [id])
}

model Tag {
  id              String   @id @default(cuid())
  name            String
  color           String?  // For UI styling
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  applicationTags ApplicationTag[]

  @@unique([name, userId]) // Each user can have unique tags with same name
}

model ApplicationTag {
  id            String   @id @default(cuid())
  applicationId String
  tagId         String
  application   Application @relation(fields: [applicationId], references: [id])
  tag           Tag       @relation(fields: [tagId], references: [id])

  @@unique([applicationId, tagId])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum ContractType {
  FULL_TIME
  INTERNSHIP
  FREELANCE
  CONTRACT
}

enum WorkModel {
  WFO
  WFH
  HYBRID
}

enum Status {
  WISHLIST
  APPLIED
  SCREENING
  INTERVIEW_HR
  INTERVIEW_USER
  OFFERING
  REJECTED
  GHOSTED
}